modules = ["python-3.11", "nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Fairytale Generator Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "React Dev Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test Story and Image Generation"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test Story Generation"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test Image Generation"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Deploy Fairytale Generator"

[[workflows.workflow]]
name = "Start Fairytale Generator Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm start"
waitForPort = 8000

[[workflows.workflow]]
name = "React Dev Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd client && npm run dev -- --host 0.0.0.0"
waitForPort = 5173

[[workflows.workflow]]
name = "Test Story and Image Generation"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node test_story_generation.js"

[[workflows.workflow]]
name = "Test Story Generation"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node -e \"const { generateStory } = require('./services/storyGenerator'); async function test() { try { const story = await generateStory('Alice', 7, 'dragons'); console.log('Story:', story); } catch (error) { console.error('Error:', error); } } test();\""

[[workflows.workflow]]
name = "Test Image Generation"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node -e \"const { generateImage } = require('./services/imageGenerator'); async function test() { try { const imageUrl = await generateImage('Alice and the Friendly Dragon'); console.log('Image URL:', imageUrl); } catch (error) { console.error('Error:', error); } } test();\""

[[workflows.workflow]]
name = "Deploy Fairytale Generator"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run deploy"
waitForPort = 8000

[deployment]
run = ["sh", "-c", "cd client && npm run build && cd .. && node server.js"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 4173
externalPort = 3000

[[ports]]
localPort = 5173
externalPort = 5173

[[ports]]
localPort = 8000
externalPort = 80
