modules = ["python-3.11", "nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Fairytale Generator Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "React Dev Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test Supabase"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Execute SQL Migration"

[[workflows.workflow]]
name = "Start Fairytale Generator Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server.js"
waitForPort = 8000

[[workflows.workflow]]
name = "React Dev Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd client && npm run dev -- --host 0.0.0.0"
waitForPort = 5173

[[workflows.workflow]]
name = "Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server.js"
waitForPort = 8000

[[workflows.workflow]]
name = "Test Supabase"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node test_supabase_setup.js"

[[workflows.workflow]]
name = "Execute SQL Migration"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "psql $DATABASE_URL -f supabase/migrations/stories_table.sql"

[deployment]
run = ["sh", "-c", "cd client && npm run build && cd .. && node server.js"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 4173
externalPort = 3000

[[ports]]
localPort = 5173
externalPort = 5173

[[ports]]
localPort = 8000
externalPort = 80
